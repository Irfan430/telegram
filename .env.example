# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hypergiga_bot
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_PRETTY=false

# Observability
FEATURE_TRACING=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer your_token_here
OTEL_SERVICE_NAME=hypergiga-tg-bot

# Quotas & Rate Limits
QUOTAS_DEFAULT={"daily_commands":1000,"daily_downloads":50,"daily_ai_requests":100,"daily_media_conversions":20}
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_COMMAND=10

# Media Processing
MEDIA_API_BASE=https://api.example.com/media
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
FFMPEG_PATH=/usr/bin/ffmpeg

# AI Provider Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
AI_FALLBACK_PROVIDER=local

# External APIs
YOUTUBE_API_KEY=your_youtube_api_key_here
WIKIPEDIA_API_URL=https://en.wikipedia.org/api/rest_v1
URL_SHORTENER_API=https://api.example.com/shorten

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_char_encryption_key_here
CORS_ORIGIN=https://your-domain.com

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development
DEBUG=false
ENABLE_SWAGGER=false